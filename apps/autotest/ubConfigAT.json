{
	"httpServer": {
		"host": "localhost",
		"port": "888",
		"requestQueueLength": 1000,
		"maxBandwidth": 0,
		"maxConnections": 0,
		"allowCORSFrom": "",
		"inetPub": "%UB_HOME%\\Web\\",
		"headersPostprocessors": ["#include(%UB_HOME%\\defHeadersPostprocessors.json)"],
		"watchFileChanges": {
			"enabled": true,
			"hashingStrategy": "ModifyDate"
		},
		"threadPoolSize": 1
	},
	"wsServer": {
		"host": "localhost",
		"port": "888",
		"path": "ws"
	},
	"logging": {
		"path": ".\\logs",
		"levels": [
			"*"
		],
		"threadingModel": "IdentifiedInOnFile",
		"stackTrackDepth": 10,
		"rotationSizeInMB": 100,
		"performanceCounters": true
	},
	"javascript": {
		"timeout": -1,
		"lifetimeInMinutes": 360,
		"fullGCPeriod": 100,
		"maxPerEngineMemory": 512,
		"maxRecursionDepth": 32
	},
	"security": {
		"authenticationMethods": [
			"UB"
		],
		"ldapCatalogs": [
			{
				"name": "MYDOMAIN",
				"host": "softline.main",
				"port": "3268",
				"useTLS": false,
				"useSSL": false,
				"useSasl": true
			}
		]
	},
	"uiSettings": {
		"adminUI": {
			"applicationName": "SQLite3 autotest",
			"defaultPasswordForDebugOnly": "admin",
