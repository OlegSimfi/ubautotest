			"messenger": {
				"enabled": true,
				"checkInterval": 30
			}
		},
		"portalUI": {}
	},
	"application": {
		"defaultLang": "uk",
		"rootHandler": "index.html",
		"schedulers": {"enabled": true},
		"domain": {
			"models": [
				"#include(./allUBModels.json)",
