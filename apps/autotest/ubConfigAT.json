				"audit"
			]
		},
		"fts": {
			"enabled": true,
			"async": false
		},
		"connections": [
			{
				"name": "main",
				"driver": "SQLite3",
				"isDefault": true,
				"dialect": "SQLite3",
				"databaseName": ".\\autotestDB.sqlite3",
				"supportLang": ["en", "uk"],
				"advSettings": "Synchronous=Off"
			},
			{
				"name": "ftsDefault",
				"driver": "SQLite3",
				"dialect": "SQLite3",
				"databaseName": ".\\fts\\autotestFTS.ftsdb",
				"supportLang": [
					"uk"
				],
				"advSettings": "Synchronous=Off,Tokenizer=stemka"
			},
			{
				"name": "ftsSubjectSearch",
				"driver": "SQLite3",
				"dialect": "SQLite3",
				"databaseName": ".\\fts\\autotestSubjects.ftsdb",
				"supportLang": [
					"uk"
				],
				"advSettings": "Synchronous=Off,Tokenizer=stemka"
			}
		],
		"blobStores": [
			{
				"name": "mdb",
				"storeType": "Virtual"
			},
			{
				"name": "simple",
				"path": ".\\documents\\simple\\",
